<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    style="@style/MW"
    android:minWidth="300dp"
    android:padding="24dp">

    <TextView
        android:id="@+id/dialog_title_text"
        style="@style/PublicSans.Black.Size20.Zero_W"
        android:gravity="center"
        android:text="@string/title_rest_time"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/rest_for_5_layout"
        style="@style/Zero_H56"
        android:layout_marginTop="24dp"
        android:src="@drawable/ic_rounded_outlined_rectangle"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/dialog_title_text" />

    <TextView
        android:id="@+id/rest_for_5_title_text"
        style="@style/PublicSans.Black.Size16.Zero_W"
        android:layout_marginHorizontal="16dp"
        android:lineSpacingExtra="1sp"
        android:text="@string/button_rest_for_5_minutes"
        app:layout_constraintBottom_toBottomOf="@id/rest_for_5_layout"
        app:layout_constraintEnd_toStartOf="@id/rest_for_5_selected_image"
        app:layout_constraintStart_toStartOf="@id/rest_for_5_layout"
        app:layout_constraintTop_toTopOf="@id/rest_for_5_layout" />

    <ImageView
        android:id="@+id/rest_for_5_selected_image"
        style="@style/W24_H24"
        android:layout_marginEnd="16dp"
        android:src="@drawable/ic_done"
        app:layout_constraintBottom_toBottomOf="@id/rest_for_5_layout"
        app:layout_constraintEnd_toEndOf="@id/rest_for_5_layout"
        app:layout_constraintStart_toEndOf="@id/rest_for_5_title_text"
        app:layout_constraintTop_toTopOf="@id/rest_for_5_layout"
        app:tint="@color/primaryColor" />

    <ImageView
        android:id="@+id/rest_for_20_layout"
        style="@style/Zero_H56"
        android:layout_marginTop="16dp"
        android:src="@drawable/ic_rounded_outlined_rectangle"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/rest_for_5_layout" />

    <TextView
        android:id="@+id/rest_for_20_title_text"
        style="@style/PublicSans.Black.Size16.Zero_W"
        android:layout_marginHorizontal="16dp"
        android:lineSpacingExtra="1sp"
        android:text="@string/button_rest_for_20_minutes"
        app:layout_constraintBottom_toBottomOf="@id/rest_for_20_layout"
        app:layout_constraintEnd_toStartOf="@id/rest_for_20_selected_image"
        app:layout_constraintStart_toStartOf="@id/rest_for_20_layout"
        app:layout_constraintTop_toTopOf="@id/rest_for_20_layout" />

    <ImageView
        android:id="@+id/rest_for_20_selected_image"
        style="@style/W24_H24"
        android:layout_marginEnd="16dp"
        android:src="@drawable/ic_done"
        app:layout_constraintBottom_toBottomOf="@id/rest_for_20_layout"
        app:layout_constraintEnd_toEndOf="@id/rest_for_20_layout"
        app:layout_constraintStart_toEndOf="@id/rest_for_20_title_text"
        app:layout_constraintTop_toTopOf="@id/rest_for_20_layout"
        app:tint="@color/primaryColor" />

</androidx.constraintlayout.widget.ConstraintLayout>
