<?xml version="1.0" encoding="utf-8"?>

<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    style="@style/M_H50">

    <ImageView
        android:id="@+id/ic_category"
        style="@style/WW"
        android:layout_marginStart="16dp"
        android:background="@drawable/ic_category_color_small"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="TouchTargetSizeCheck" />

    <TextView
        android:id="@+id/text_view_category_name"
        style="@style/RobotoRegular.Black.Size14.Zero_W"
        android:ellipsize="end"
        android:maxLines="1"
        android:layout_marginStart="@dimen/spacing_normal"
        android:layout_marginEnd="@dimen/spacing_normal"
        app:layout_constraintBottom_toBottomOf="@+id/ic_category"
        app:layout_constraintEnd_toStartOf="@+id/text_view_tasks_number"
        app:layout_constraintStart_toEndOf="@+id/ic_category"
        app:layout_constraintTop_toTopOf="@+id/ic_category"
        tools:text="Category name" />

    <TextView
        android:id="@+id/text_view_tasks_number"
        style="@style/RobotoRegular.Black.Size14.Zero_W"
        android:layout_marginEnd="@dimen/spacing_normal"
        app:layout_constraintBottom_toBottomOf="@+id/text_view_category_name"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/text_view_category_name"
        tools:text="12" />


</androidx.constraintlayout.widget.ConstraintLayout>
