<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_marginBottom="16dp"
    style="@style/MW">

    <TextView
        android:id="@+id/message_title_text"
        style="@style/RobotoRegular.Black.Size16.MW"
        android:gravity="center"
        tools:text="Message title" />

    <TextView
        android:id="@+id/message_error_text"
        style="@style/RobotoRegular.Black.Size14.MW"
        android:layout_marginTop="8dp"
        tools:text="Message error" />

    <TextView
        android:id="@+id/message_hint_text"
        style="@style/RobotoRegular.Black.Size14.MW"
        android:layout_marginTop="8dp"
        tools:text="Message hint" />

</LinearLayout>
