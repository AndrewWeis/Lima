<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="TrackerTheme" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <item name="colorPrimary">@color/primaryColor</item>
        <item name="colorPrimaryDark">@color/primaryDarkColor</item>
        <item name="colorPrimaryVariant">@color/primaryLightColor</item>
        <item name="colorOnPrimary">@color/primaryTextColor</item>
        <item name="colorSecondary">@color/secondaryColor</item>
        <item name="colorSecondaryVariant">@color/secondaryDarkColor</item>

        <item name="textAppearanceBody1">@style/CustomBody1</item>
        <item name="textAppearanceSubtitle2">@style/CustomSubtitle2</item>
        <item name="textAppearanceHeadline6">@style/CustomHeadLine6</item>
    </style>

    <style name="CustomHeadLine6">
        <item name="android:maxLines">1</item>
        <item name="android:ellipsize">end</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="CustomBody1" parent="TextAppearance.MaterialComponents.Body1">
        <item name="android:maxLines">1</item>
        <item name="android:ellipsize">end</item>
    </style>

    <style name="CustomSubtitle2">
        <item name="android:gravity">start|top</item>
        <item name="android:scrollHorizontally">false</item>
        <item name="android:textAlignment">viewStart</item>
    </style>

    <style name="DatePicker" parent="Theme.AppCompat.Light.Dialog">
        <item name="android:buttonBarPositiveButtonStyle">@style/DatePickerButtonStyle</item>
        <item name="android:buttonBarNegativeButtonStyle">@style/DatePickerButtonStyle</item>
        <item name="colorPrimary">@color/white</item>
        <item name="colorAccent">@color/black</item>
        <item name="colorControlActivated">@color/black</item>
        <item name="android:datePickerMode">calendar</item>
    </style>

    <style name="DatePickerButtonStyle" parent="Widget.AppCompat.Button.ButtonBar.AlertDialog">
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="TaskCheckBox">
        <item name="android:minWidth">0dp</item>
        <item name="android:minHeight">0dp</item>
    </style>

    <style name="TaskCheckBox.WW">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

</resources>
