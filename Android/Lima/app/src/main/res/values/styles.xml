<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="TrackerTheme" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <item name="colorPrimary">@color/primaryColor</item>
        <item name="colorPrimaryDark">@color/primaryDarkColor</item>
        <item name="colorPrimaryVariant">@color/primaryLightColor</item>
        <item name="colorOnPrimary">@color/primaryTextColor</item>
        <item name="colorSecondary">@color/secondaryColor</item>
        <item name="colorSecondaryVariant">@color/secondaryDarkColor</item>
        <item name="colorOnSecondary">@color/secondaryTextColor</item>

        <item name="android:fontFamily">@font/ibm_regular</item>
        <item name="fontFamily">@font/ibm_regular</item>
        <item name="textAppearanceBody1">@style/CustomBody1</item>
        <item name="textAppearanceSubtitle2">@style/CustomSubtitle2</item>
        <item name="textAppearanceHeadline6">@style/CustomHeadLine6</item>
    </style>

    <style name="CustomHeadLine6">
        <item name="android:maxLines">1</item>
        <item name="android:ellipsize">end</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="CustomBody1" parent="TextAppearance.MaterialComponents.Body1">
        <item name="android:maxLines">1</item>
        <item name="android:ellipsize">end</item>
    </style>

    <style name="CustomSubtitle2">
        <item name="android:gravity">start|top</item>
        <item name="android:scrollHorizontally">false</item>
        <item name="android:textAlignment">viewStart</item>
    </style>

    <style name="radio_btn">
        <item name="android:layout_width">110dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginEnd">14dp</item>
        <item name="android:button">@null</item>
        <item name="android:fontFamily">@font/ibm_regular</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="date_picker_btn">
        <item name="strokeWidth">1dp</item>
        <item name="strokeColor">@color/lightGray</item>
        <item name="android:stateListAnimator">@null</item>
        <item name="iconTint">@color/black_de</item>
        <item name="iconGravity">end</item>
        <item name="icon">@drawable/ic_date_list</item>
        <item name="android:textColor">@color/black_de</item>
        <item name="android:textSize">12sp</item>
        <item name="backgroundTint">@color/white</item>
        <item name="boxCornerRadiusBottomEnd">4dp</item>
        <item name="boxCornerRadiusBottomStart">4dp</item>
        <item name="boxCornerRadiusTopEnd">4dp</item>
        <item name="boxCornerRadiusTopStart">4dp</item>
    </style>

</resources>