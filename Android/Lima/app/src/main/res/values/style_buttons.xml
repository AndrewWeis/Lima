<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- Button type -->
    <style name="TextButton" parent="@style/Widget.MaterialComponents.Button.TextButton">
        <item name="android:minWidth">0dp</item>
        <item name="android:minHeight">0dp</item>
        <item name="textAllCaps">false</item>
        <item name="android:insetRight">0dp</item>
        <item name="android:insetLeft">0dp</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="rippleColor">@color/color_ripple</item>
        <item name="android:letterSpacing">0</item>
    </style>

    <style name="OutlineButton" parent="@style/Widget.MaterialComponents.Button.OutlinedButton">
        <item name="android:insetRight">0dp</item>
        <item name="android:insetLeft">0dp</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="rippleColor">@color/color_ripple</item>
        <item name="android:letterSpacing">0</item>
        <item name="cornerRadius">8dp</item>
        <item name="textAllCaps">false</item>
    </style>

    <style name="ButtonWhite">
        <item name="android:insetRight">0dp</item>
        <item name="android:insetLeft">0dp</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="rippleColor">@color/color_ripple</item>
        <item name="android:letterSpacing">0</item>
        <item name="cornerRadius">8dp</item>
        <item name="textAllCaps">false</item>
        <item name="backgroundTint">@color/white</item>
    </style>

    <style name="Contained" parent="@style/Widget.MaterialComponents.Button.UnelevatedButton">
        <item name="android:minHeight">0dp</item>
        <item name="android:insetRight">0dp</item>
        <item name="android:insetLeft">0dp</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="rippleColor">@color/color_ripple</item>
        <item name="android:letterSpacing">0</item>
        <item name="cornerRadius">8dp</item>
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:textStyle">normal</item>
        <item name="android:backgroundTint">@color/primaryColor</item>
    </style>


    <!-- Button font -->
    <style name="TextButton.PublicSans">
        <item name="android:fontFamily">@font/public_sans_semi_bold</item>
        <item name="android:textStyle">normal</item>
    </style>

    <style name="ButtonWhite.WorkSans">
        <item name="android:fontFamily">@font/work_sans_semi_bold</item>
        <item name="android:textStyle">normal</item>
    </style>

    <style name="OutlineButton.PublicSans">
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textStyle">normal</item>
    </style>

    <style name="OutlineButton.WorkSans">
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textStyle">normal</item>
    </style>

    <style name="Contained.PublicSans">
        <item name="android:fontFamily">@font/public_sans_semi_bold</item>
        <item name="android:textStyle">normal</item>
    </style>

    <style name="Contained.WorkSans">
        <item name="android:fontFamily">@font/work_sans_regular</item>
        <item name="android:textStyle">normal</item>
    </style>


    <!-- Button size -->
    <style name="TextButton.PublicSans.Size14">
        <item name="android:textSize">14sp</item>
    </style>

    <style name="ButtonWhite.WorkSans.Size14">
        <item name="android:textSize">14sp</item>
    </style>

    <style name="OutlineButton.WorkSans.Size14">
        <item name="android:textSize">14sp</item>
    </style>

    <style name="OutlineButton.PublicSans.Size14">
        <item name="android:textSize">14sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="Contained.PublicSans.Size14">
        <item name="android:textSize">14sp</item>
        <item name="textAllCaps">false</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="Contained.WorkSans.Size16">
        <item name="android:textSize">16sp</item>
        <item name="textAllCaps">false</item>
    </style>

    <style name="Contained.WorkSans.Size12">
        <item name="android:textSize">12sp</item>
        <item name="textAllCaps">false</item>
    </style>


    <!-- Button color -->
    <style name="TextButton.PublicSans.Size14.Black">
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="OutlineButton.WorkSans.Size14.White">
        <item name="android:textColor">@color/white</item>
        <item name="strokeColor">@color/white</item>
        <item name="iconTint">@color/white</item>
    </style>

    <style name="OutlineButton.PublicSans.Size14.Gray">
        <item name="android:textColor">@color/gray2</item>
        <item name="strokeColor">@color/gray</item>
    </style>

    <style name="Contained.PublicSans.Size14.White">
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="Contained.PublicSans.Size14.Black">
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="Contained.WorkSans.Size16.Black">
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="Contained.WorkSans.Size12.White">
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="ButtonWhite.WorkSans.Size14.Black">
        <item name="android:textColor">@color/black</item>
    </style>


    <!-- Button layout -->
    <style name="TextButton.PublicSans.Size14.Black.WW">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="OutlineButton.WorkSans.Size14.White.Zero_H48">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">48dp</item>
    </style>

    <style name="OutlineButton.PublicSans.Size14.Gray.M_H42">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">42dp</item>
    </style>

    <style name="OutlineButton.PublicSans.Size14.Gray.Zero_H42">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">42dp</item>
    </style>

    <style name="Contained.PublicSans.Size14.White.M_H42">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">42dp</item>
    </style>

    <style name="Contained.PublicSans.Size14.White.Zero_H42">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">42dp</item>
    </style>

    <style name="Contained.WorkSans.Size16.Black.Zero_H48">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">48dp</item>
    </style>

    <style name="ButtonWhite.WorkSans.Size14.Black.Zero_H48">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">48dp</item>
    </style>

</resources>
